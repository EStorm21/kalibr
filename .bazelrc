# Build options
build --cxxopt=-std=c++14
build --host_cxxopt=-std=c++14
build --copt=-O2
build --copt=-fPIC

# Enable platform-specific config
build:linux --copt=-fdiagnostics-color=always
build:macos --copt=-fdiagnostics-color=always

# Test options
test --test_output=errors
test --test_summary=detailed

# Python options
build --python_path=python3

# Compiler warnings
build --copt=-Wall
build --copt=-Wextra
build --copt=-Wno-unused-parameter
build --copt=-Wno-missing-field-initializers

# Address sanitizer config (optional)
build:asan --strip=never
build:asan --copt=-fsanitize=address
build:asan --copt=-fno-omit-frame-pointer
build:asan --linkopt=-fsanitize=address

# Thread sanitizer config (optional)
build:tsan --strip=never
build:tsan --copt=-fsanitize=thread
build:tsan --copt=-fno-omit-frame-pointer
build:tsan --linkopt=-fsanitize=thread

